{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "backend_src",
    "esModuleInterop": true,
    "moduleResolution": "node",                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["backend_src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
